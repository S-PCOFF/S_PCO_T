{{>layout/header}}

<h1>게시글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">id</label>
                <input type="number" class="form-control" id="id" value="{{userId}}" placeholder="제목을 입력하세요" readonly>
            </div>
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" class="form-control" id="name" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="workDate"> 근무일자 </label>
                <input type="text" class="form-control" id="workDate" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="workMinute"> 근무시간 </label>
                <input type="text" class="form-control" id="workMinute" placeholder="작성자를 입력하세요">
            </div>
        </form>
        <button type="button" class="btn btn-primary" id="btn-work-save">등록</button>
        <a href="/work" role="button" class="btn btn-secondary">취소</a>
    </div>
</div>

{{>layout/footer}}